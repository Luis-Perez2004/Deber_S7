<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tutoria_S6_app.Elemento">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="Aquamarine">
                <Label Text="ELEMENTO" HorizontalTextAlignment="Center" BackgroundColor="Aquamarine"/>
            </Frame>
            
            <Label x:Name="mensaje"/>
            <Label Text="Nombre: "/>
            <Entry x:Name="Nombre" Placeholder="Nombre"/>
            <Label Text="Usuario: "/>
            <Entry x:Name="Usuario" Placeholder="Usuario"/>
            <Label Text="Contraseña: "/>
            <Entry x:Name="Contrasenia" Placeholder="Contrasenia"/>
            <Button x:Name="btnActualizar" Text="Actualizar" Clicked="btnActualizar_Clicked" BackgroundColor="DarkCyan"/>
            <Button x:Name="btnEliminar" Text="Eliminar" Clicked="btnEliminar_Clicked" BackgroundColor="DarkCyan"/>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>